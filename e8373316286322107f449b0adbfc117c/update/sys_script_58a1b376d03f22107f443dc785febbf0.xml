        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    if (!current.assigned_to && current.assignment_group) {

        // find one available user in the assignment group
        var gr = new GlideRecord('sys_user_grmember');
        gr.addQuery('group', current.assignment_group);
        gr.query();

        while (gr.next()) {
            var user = new GlideRecord('sys_user');
            if (user.get(gr.user) && user.u_available_for_cmt == true) {
                // assign this user
                current.assigned_to = user.sys_id;

                // mark them unavailable
                user.u_available_for_cmt = false;
                user.update();
                break; // stop after assigning one
            }
        }
    }
