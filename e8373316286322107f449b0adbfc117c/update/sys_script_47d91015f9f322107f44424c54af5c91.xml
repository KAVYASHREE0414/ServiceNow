        <script><![CDATA[(function executeRule(current, previous) {
  var hasAssignee = !!current.getValue('u_allocated_to');
  var isInsert = current.operation() === 'insert';
  var changed = !isInsert && previous && 
                (current.getValue('u_allocated_to') !== previous.getValue('u_allocated_to'));

  if (hasAssignee && (isInsert || changed)) {
    // parm1 = assignee sys_id
    // parm2 = task number (optional, for reference in notification)
    gs.eventQueue(
      'cmt.task.assigned',
      current,
      current.getValue('u_allocated_to'),
      current.getValue('number') || ''
    );
  }
})(current, previous);
]]></script>
