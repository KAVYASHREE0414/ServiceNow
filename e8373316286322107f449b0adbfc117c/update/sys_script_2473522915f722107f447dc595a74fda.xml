        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {
    // Run before insert or update only
    if (current.operation() !== 'insert' && current.operation() !== 'update') {
        return;
    }

    // Skip if already allocated
    if (current.u_parking_slot) {
        return;
    }

    var slotGR = new GlideRecord('u_parking_slot'); // Use your exact table name here
    slotGR.addQuery('u_status', 'Available'); // Confirm status field name
    slotGR.orderBy('sys_created_on'); // Pick oldest available slot
    slotGR.query();

    if (slotGR.next()) {
        // Allocate slot to visitor
        current.u_parking_slot = slotGR.sys_id;

        // Update parking slot status to Reserved
        slotGR.u_status = 'Reserved';
        slotGR.update();
        gs.info('Allocated parking slot ' + slotGR.sys_id + ' to visitor ' + current.sys_id);
    } else {
        // Clear allocation if no slots free
        current.u_parking_slot = '';
        gs.info('No available parking slot for visitor ' + current.sys_id);
    }
})(current, previous);]]></script>
