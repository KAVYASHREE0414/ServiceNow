        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    // Run only when approval state changes
    if (!current.state.changes()) {
        gs.info("Approval state unchanged, skipping.");
        return;
    }

    gs.info("Approval state changed to: " + current.state);

    var vr = new GlideRecord('u_visitors');
    if (vr.get(current.sysapproval)) {
        gs.info("Found Visitor Request: " + vr.number);

        if (current.state == 'approved') {
            vr.approval = 'approved';
            vr.state = 'closed_complete';
        } else if (current.state == 'rejected') {
            vr.approval = 'rejected';
            vr.state = 'closed_incomplete';
        }

        vr.update();
        gs.info("Visitor Request updated: " + vr.number);
    } else {
        gs.info("Visitor not found for sysapproval: " + current.sysapproval);
    }
})(current, previous);
]]></script>
