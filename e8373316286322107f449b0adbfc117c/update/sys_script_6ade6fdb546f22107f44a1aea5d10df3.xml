        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    if (!current.u_approver) {
        gs.info("No approver set, skipping approval creation.");
        return;
    }

    var appr = new GlideRecord('sysapproval_approver');
    appr.initialize();
    appr.approver = current.u_approver;      // your Approver field
    appr.sysapproval = current.sys_id;       // link back to Visitor Request
    appr.state = 'requested';
    appr.insert();

    gs.info("Approval created for Visitor Request: " + current.number);
})(current, previous);
]]></script>
