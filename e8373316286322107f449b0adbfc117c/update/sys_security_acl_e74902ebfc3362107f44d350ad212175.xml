    <sys_security_acl action="INSERT_OR_UPDATE">
        <active>true</active>
        <admin_overrides>true</admin_overrides>
        <advanced>true</advanced>
        <applies_to/>
        <condition/>
        <controlled_by_refs/>
        <decision_type>allow</decision_type>
        <description>Allow read for records in u_chat_message, for users with role snc_internal, and if the ACL script returns true.</description>
        <local_or_existing>Local</local_or_existing>
        <name>u_chat_message</name>
        <operation display_value="read">read</operation>
        <script><![CDATA[(function() {
  var user = gs.getUserID();
  if (!user) return false;

  if (current.u_from == user || current.u_to == user) return true;

  if (current.u_conversation) {
    var conv = new GlideRecord('u_conversation');
    if (conv.get(String(current.u_conversation))) {
      if (conv.u_resident == user || conv.u_provider == user) return true;
    }
  }

  return gs.hasRole('admin');
})();
]]></script>
